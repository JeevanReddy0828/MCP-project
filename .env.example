# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Kafka Connect REST (for MCP health checks)
CONNECT_REST_URL=http://localhost:8083

# Snowflake (REQUIRED)
SNOWFLAKE_ACCOUNT_URL=yourorg-youracct.snowflakecomputing.com:443
SNOWFLAKE_USER=KAFKA_CONNECTOR_USER
SNOWFLAKE_ROLE=KAFKA_CONNECTOR_ROLE
SNOWFLAKE_DATABASE=RT_INTEL
SNOWFLAKE_SCHEMA=RAW

# IMPORTANT:
# SNOWFLAKE_PRIVATE_KEY expects ONLY the key body (no header/footer) and no line breaks.
# Paste the PKCS#8 private key content (without BEGIN/END lines) as ONE LINE.
SNOWFLAKE_PRIVATE_KEY=PASTE_PRIVATE_KEY_BODY_SINGLE_LINE_HERE

# Optional: if your private key is encrypted (not used in this repo's python client)
SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=

# Topic -> table mapping (in Snowflake RAW schema)
TOPICS=orders,payments
TOPIC2TABLE_MAP=orders:ORDERS_EVENTS,payments:PAYMENTS_EVENTS
